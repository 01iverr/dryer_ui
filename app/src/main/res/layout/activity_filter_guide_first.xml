<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.FiltersGuideFirstActivity"
    android:orientation="vertical">
    <!--  Settings button and back to home button  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageButton
            android:id="@+id/settings_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_settings_icon"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/back_home_btn"
            android:layout_width="97dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Επιστροφή στην αρχική"
            android:textSize="8sp"
            app:layout_constraintStart_toEndOf="@+id/settings_btn"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/square_second_shape">

        <TextView
            android:id="@+id/square_first_step"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/square_shape"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/filter_first_step_ic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/square_step_shape"
            android:gravity="center"
            android:padding="1dp"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/square_first_step"
            app:layout_constraintStart_toStartOf="@+id/square_first_step"
            app:layout_constraintTop_toTopOf="@+id/square_first_step"

            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/filter_first_step_txt"
            android:layout_width="234dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/square_text_shape"
            android:text="Ανοίξτε το πορτάκι που υποδεικνέται στην εικόνα"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/square_first_step"
            app:layout_constraintStart_toEndOf="@+id/filter_first_step_ic"
            app:layout_constraintTop_toTopOf="@+id/square_first_step"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/dryer_img"
            android:layout_width="186dp"
            android:layout_height="174dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/square_first_step"
            app:srcCompat="@drawable/dryer"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/square_second_shape">
        <TextView
            android:id="@+id/square_second_step"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="216dp"
            android:background="@drawable/square_shape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/filter_second_step_txt"
            android:layout_width="234dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/square_text_shape"
            android:text="Τραβήξτε προς τα έξω το φίλτρο από το χερούλι"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/square_second_step"
            app:layout_constraintStart_toEndOf="@+id/filter_second_step_ic"
            app:layout_constraintTop_toTopOf="@+id/square_second_step"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/filter_second_step_ic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/square_step_shape"
            android:gravity="center"
            android:padding="1dp"
            android:text="2"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/square_second_step"
            app:layout_constraintStart_toStartOf="@+id/square_second_step"
            app:layout_constraintTop_toTopOf="@+id/square_second_step"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/dryer_handle_img"
            android:layout_width="222dp"
            android:layout_height="132dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/square_second_step"
            app:srcCompat="@drawable/filter_handle"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Προηγουμενο"
            android:textSize="16sp" />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Επόμενο"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>