<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_300"
    tools:context="activity.TimePickerFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/timeHoursUpBtn"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/gray_300"
                android:shadowColor="@null"
                android:stateListAnimator="@null"
                android:text="@string/up_arrow" />

            <EditText
                android:id="@+id/timeHoursInput"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ems="10"
                android:inputType="number"
                android:minHeight="40dp"
                android:text="@string/double_zero"
                android:textAllCaps="false"
                android:textColor="@color/gray_100"
                android:textSize="20sp" />

            <Button
                android:id="@+id/timeHoursDownBtn"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/gray_300"
                android:shadowColor="@null"
                android:stateListAnimator="@null"
                android:text="@string/down_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="10sp"
                android:layout_height="48dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="@string/time_divider"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/timeMinutesUpBtn"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/gray_300"
                android:shadowColor="@null"
                android:stateListAnimator="@null"
                android:text="@string/up_arrow" />

            <EditText
                android:id="@+id/timeMinutesInput"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ems="10"
                android:inputType="number"
                android:minHeight="40dp"
                android:text="@string/double_zero"
                android:textAllCaps="false"
                android:textColor="@color/gray_100"
                android:textSize="20sp" />

            <Button
                android:id="@+id/timeMinutesDownBtn"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/gray_300"
                android:shadowColor="@null"
                android:stateListAnimator="@null"
                android:text="@string/down_arrow" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>