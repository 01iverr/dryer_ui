<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.FilterGuideFourthActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fourthFilterFunctionBtns"
        android:name="activity.FunctionButtonsFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp">
        <!--  Settings button and back to home button  -->


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/square_second_shape">

            <TextView
                android:id="@+id/square_sixth_step"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/square_shape"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/filter_sixth_step_ic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/square_step_shape"
                android:gravity="center"
                android:padding="1dp"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/square_sixth_step"
                app:layout_constraintStart_toStartOf="@+id/square_sixth_step"
                app:layout_constraintTop_toTopOf="@+id/square_sixth_step"

                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/filter_sixth_step_txt"
                android:layout_width="234dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/square_text_shape"
                android:text="@string/filter_guide_sixth_step_title"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/square_sixth_step"
                app:layout_constraintStart_toEndOf="@+id/filter_sixth_step_ic"
                app:layout_constraintTop_toTopOf="@+id/square_sixth_step"
                tools:ignore="MissingConstraints,RtlCompat" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/dryer_img"
                android:layout_width="166dp"
                android:layout_height="125dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/square_sixth_step"
                android:src="@drawable/dryer_handle_pull_in"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/square_second_shape">

            <TextView
                android:id="@+id/square_seventh_step"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="216dp"
                android:background="@drawable/square_shape"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/filter_seventh_step_txt"
                android:layout_width="234dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/square_text_shape"
                android:text="@string/filter_guide_seventh_step_title"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/square_seventh_step"
                app:layout_constraintStart_toEndOf="@+id/filter_seventh_step_ic"
                app:layout_constraintTop_toTopOf="@+id/square_seventh_step"
                tools:ignore="MissingConstraints,RtlCompat" />

            <TextView
                android:id="@+id/filter_seventh_step_ic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/square_step_shape"
                android:gravity="center"
                android:padding="1dp"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/square_seventh_step"
                app:layout_constraintStart_toStartOf="@+id/square_seventh_step"
                app:layout_constraintTop_toTopOf="@+id/square_seventh_step"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/dryer_handle_img"
                android:layout_width="222dp"
                android:layout_height="132dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/square_seventh_step"
                app:srcCompat="@drawable/dryer_guide_pins"
                tools:ignore="MissingConstraints" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/square_shape"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dryer_handle_img"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:text="@string/filter_guide_seventh_step_warning_txt"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/gray_400"
                    app:layout_constraintBottom_toBottomOf="@+id/textView"
                    app:layout_constraintEnd_toStartOf="@+id/textView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView"
                    app:srcCompat="@android:drawable/ic_dialog_alert" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/filter_guide_fourth_back_btn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_400"
            android:text="@string/previous_btn"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <Button
            android:id="@+id/filter_guide_fourth_return_btn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/gray_400"
            android:text="@string/return_btn"
            android:textAllCaps="false"
            android:textSize="16sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>