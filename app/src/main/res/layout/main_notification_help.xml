<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@color/gray_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gray_200"
            android:text="@string/main_notification_help_label" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/main_notification_help_gifImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gray_200"
            android:src="@drawable/notification_help_greek" />

        <Button
            android:id="@+id/main_notification_got_it_btn"
            style="@style/Theme.IDry.Button.Standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/got_it_btn" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>