<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.DoorGuideActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!--  Settings button and back to home button  -->

        <TextView
            android:id="@+id/door_guide_txt1"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/square_shape"
            android:gravity="center_vertical"
            android:text="@string/door_guide_title"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints,RtlCompat" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="@drawable/square_second_shape">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/gray_200"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/dryer_door_guide_img"
                    android:layout_width="200dp"
                    android:layout_height="240dp"
                    android:layout_marginLeft="70dp"
                    app:srcCompat="@drawable/dryer_close_door"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/dryer_clothes_img"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="180dp"
                    app:srcCompat="@drawable/dryer_clothes"
                    tools:ignore="MissingConstraints" />

            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/door_guide_txt2"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/square_shape"
            android:gravity="center_vertical"
            android:text="@string/door_guide_close_door_title"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints,RtlCompat" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>