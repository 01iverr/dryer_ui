<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IDry.MidnightMadness" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_200</item>
        <item name="colorPrimaryVariant">@color/gray_300</item>
        <item name="colorOnPrimary">@color/gray_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_100</item>
        <item name="colorSecondaryVariant">@color/whitesmoke</item>
        <item name="colorOnSecondary">@color/confirmation_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background color -->
        <item name="android:background">@color/gray_300</item>

        <!-- Text styling -->
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAlignment">center</item>

        <!-- Font -->
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="fontFamily">@font/proxima_nova_bold</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->

        <!-- Snackbar text style -->
        <item name="snackbarTextViewStyle">@style/Theme.IDry.Snackbar.TextView</item>
    </style>

    <!-- Snackbar style -->
    <style name="Theme.IDry.Snackbar.TextView" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/gray_200</item>
    </style>
    
    <!-- Dialog style -->
    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/gray_200</item>
    </style>

    <!-- Button styles -->
    <style name="Theme.IDry.Button" parent="ThemeOverlay.Material3.Button">
        <item name="android:backgroundTint">@color/gray_400</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Theme.IDry.Button.Green" parent="Theme.IDry.Button">
        <item name="android:textColor">@color/confirmation_green</item>
        <item name="strokeColor">@color/confirmation_green</item>
    </style>

    <style name="Theme.IDry.Button.Red" parent="Theme.IDry.Button">
        <item name="android:textColor">@color/error_red</item>
        <item name="strokeColor">@color/error_red</item>
    </style>

    <style name="Theme.IDry.Button.Standard" parent="Theme.IDry.Button">
        <item name="android:textColor">@color/gray_100</item>
        <item name="strokeColor">@color/gray_100</item>
    </style>

</resources>